<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wakutabi.mapper.InquiryMapper">

	<!--문의내역 등록-->
	<insert id="insertInquiry" parameterType="com.wakutabi.domain.InquiryDto">
		INSERT INTO qna_questions
		(user_id,type,title,content)
		VALUES
		(#{userId},#{type},#{title},#{content})
	</insert>

	<!-- (임시)문의내역 -->
	<select id="getInquiry" parameterType="long" resultType="com.wakutabi.domain.InquiryDto">
		select
		id,
		title,
		type,
		status,
		created_at
		from qna_questions
		where user_id = #{userId}
		order by created_at desc
	</select>

</mapper>