<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wakutabi.mapper.TravelImageMapper">

	<insert id="insertTravelImage" parameterType="com.wakutabi.domain.TravelImageDto">
		INSERT INTO trip_article_image
		(trip_article_id,image_path,order_number)
		VALUES
		(#{tripArticleId},#{imagePath},#{orderNumber})
	</insert>

    <select id="findByTripArticleId" resultType="com.wakutabi.domain.TravelImageDto">
        SELECT * FROM trip_article_image
        WHERE trip_article_id = #{tripArticleId}
        ORDER BY order_number ASC
    </select>

</mapper>